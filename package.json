{
  "name": "wp-content-pilot",
  "title": "WP Content Pilot",
  "description": "The Best WordPress Plugin ever made!",
  "version": "1.1.6",
  "homepage": "https://www.pluginever.com",
  "keywords": [],
  "author": {
    "name": "pluginever",
    "email": "support@pluginever.com",
    "url": "https://www.pluginever.com"
  },
  "engines": {
    "node": ">=8.9.3",
    "npm": ">=5.5.1"
  },
  "scripts": {
    "build": "grunt",
    "build-watch": "grunt watch",
    "makepot": "composer run-script makepot",
    "packages:fix:textdomain": "node ./bin/package-update-textdomain.js",
    "git:update-hooks": "rm -r .git/hooks && mkdir -p .git/hooks && node ./node_modules/husky/husky.js install"
  },
  "devDependencies": {
    "autoprefixer": "~8.6.2",
    "grunt": "^1.0.3",
    "grunt-babel": "^8.0.0",
    "grunt-checktextdomain": "~1.0.1",
    "grunt-contrib-clean": "~1.1.0",
    "grunt-contrib-compress": "^1.4.3",
    "grunt-contrib-concat": "~1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "~2.2.1",
    "grunt-contrib-jshint": "~1.1.0",
    "grunt-contrib-uglify": "~3.3.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-phpcs": "~0.4.0",
    "grunt-postcss": "~0.9.0",
    "grunt-prompt": "^1.3.3",
    "grunt-sass": "~2.1.0",
    "grunt-stylelint": "~0.10.0",
    "grunt-wp-i18n": "~1.0.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "node-sass": "^4.14.0",
    "stylelint": "~9.10.1",
    "susy": "2.2.14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "./bin/post-merge.sh"
    }
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "git add"
    ]
  },
  "browserslist": [
    "> 0.1%",
    "ie 8",
    "ie 9"
  ]
}
